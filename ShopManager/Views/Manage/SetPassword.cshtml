@model ShopManager.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Thêm password";
}
@Styles.Render("~/Header-CSS")
@Styles.Render("~/Animate-and-style-CSS")
<head>
    <title>Thêm mật khẩu</title>
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <h2 style="margin-top:100px">Hoàn tất đăng ký</h2>
            <section>


                @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Mật khẩu mới" })
                        
                    </div>
                    <div class="form-group">
                        
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu mới" })
                        
                    </div>
                    <div class="form-group">
                        
                            <input type="submit" value="Thêm mật khẩu" class="btn btn-primary btn-block" />
                        
                    </div>
                }

            </section>
        </div>
    </div>


</body>
@section Scripts {
    @Scripts.Render("~/Mainly-scripts")
}
