@model ShopManager.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
<title>Tài khoản của bạn</title>
@Styles.Render("~/Header-CSS")
@Styles.Render("~/Animate-and-style-CSS")



<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <h2 style="margin-top:100px">Tài khoản của bạn</h2>
        <p class="text-muted text-center"><small></small></p> 
            <hr />
            <div>

                @if (Model.HasPassword)
            {

                    @*<button class="btn btn-warning">@Html.ActionLink("Đổi mật khẩu", "ChangePassword")</button>*@
                    <a class="btn btn-warning btn-block" href="../Manage/ChangePassword">Đổi mật khẩu</a>
                }
                else
                {
                    <b class="warning">Tài khoản này chưa có mật khẩu</b>
                    @*<button class="btn btn-primary">@Html.ActionLink("Thêm mật khẩu", "SetPassword")</button>*@
                    <a class="btn btn-primary btn-block" href="../Manage/SetPassword">Thêm mật khẩu</a>
                }


            </div>
            <div>
                <p class="text-muted text-center"><small></small></p> 
                <a class="btn btn-success btn-block btn-outline" href="../Shop"><i class="fa fa-arrow-left"></i>Trở lại trang quản trị</a>
            </div>
        <div><p class="text-success">@ViewBag.StatusMessage</p></div>
</div>
</body>
            @Scripts.Render("~/Mainly-scripts")
