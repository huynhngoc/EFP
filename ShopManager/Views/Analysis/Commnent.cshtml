
@{
    ViewBag.Title = "Commnent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--Table Analysis comment-->
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Thống kê bình luận</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="tblAnalysisByComment">
                        <thead>
                            <tr>
                                <th>Bình luận</th>
                                <th>Bài đăng</th>
                                <th>Người đăng</th>
                                <th>Mục đích</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Other browsers</td>
                                <td>All others</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Bình luận</th>
                                <th>Bài đăng</th>
                                <th>Người đăng</th>
                                <th>Mục đích</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<!--./Table Analysis comment-->


@section CustomCSS
{
    @Styles.Render("~/DataTable-CSS")
}

@section CustomJS
{
    @Scripts.Render("~/DataTable-JS")


    <script>
        $('#tblAnalysisByComment').DataTable({
            pageLength: 25,
            responsive: true,
            processing: true,
            language: {
                "paginate": {
                    "next": "Tiếp",
                    "last": "Cuối",
                    "previous": "Trước",
                    "first": "Đầu"
                },
                "emptyTable": "Chưa có dữ liệu",
                "infoEmpty": "Đang hiển thị 0 đến 0 trong 0 kết quả",
                "info": "Kết quả từ _START_ đến _END_ trong số _TOTAL_",
                "infoFiltered": "(Lọc từ _MAX_ kết quả)",
                "infoThousands": ".",
                "loadingRecords": "Đang tải ...",
                "processing": "Đang xử lý ...",
                "search": "Tìm kiếm:",
                "zeroRecords": "Không tìm thấy kết quả",
                "infoFiltered": " - lọc ra từ _MAX_ kết quả",
                "lengthMenu": "Hiển thị  _MENU_ kết quả",
            },
        })
    </script>


}