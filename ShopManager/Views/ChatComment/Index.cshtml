                        var t = $('#add_datatableproduct').DataTable();
                        var id = table.cell('.selected', 0).data();
                        var tRow = t.row('#' + id);//table.cell('.selected', 0).data() + '');
                        if (tRow.index() == undefined) {
                            //Add row
