                                <div class="col-sm-8"><input type="text" name="attr" class="form-control" placeholder="Mô tả"/></div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Đặc điểm 3:</label>
                                <div class="col-sm-8"><input type="text" name="attr" class="form-control" placeholder="Mô tả"/></div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Đặc điểm 4:</label>
                                <div class="col-sm-8"><input type="text" name="attr" class="form-control" placeholder="Mô tả"/></div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Đặc điểm 5:</label>
                                <div class="col-sm-8"><input type="text" name="attr" class="form-control" placeholder="Mô tả"/></div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Đặc điểm 6:</label>
                                <div class="col-sm-8"><input type="text" name="attr" class="form-control" placeholder="Mô tả"/></div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Đặc điểm 7:</label>
