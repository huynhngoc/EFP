@section CustomJS {

    <!-- DataTables -->
    @Scripts.Render("~/DataTable-JS")
    <!-- SweetAlert -->
    @Scripts.Render("~/SweetAlert-JS")
    <script>
        var templateTable;
        var languageConfig = {
            "oPaginate": {
                "sNext": "Tiếp"
                , "sLast": "Cuối"
                , "sPrevious": "Trước"
                , "sFirst": "Đầu"
            }
                        , "sInfo": "Kết quả từ _START_ đến _END_ trong số _TOTAL_"
                        , "sInfoThousands": "."
                        , "sLoadingRecords": "Đang tải ..."
                        , "sProcessing": "Đang xử lý ..."
                        , "sSearch": "Tìm kiếm:"
                        , "sZeroRecords": "Không tìm thấy kết quả"
                        , "sInfoFiltered": " - lọc ra từ _MAX_ kết quả"
        }

        function initButton() {
            $(".change-template-button").on("click", function () {
                var clickedRow = $(this).closest("tr");
                var id = templateTable.fnGetData($(clickedRow)).Id;
                console.log()
                $.ajax({
                    url: '../Template/GetTemplateById',
                    type: "POST",
                    data: {
                        "id": id
                    },
                    success: function (data, textStatus, xhr) {
                        console.log(data);
                        editForm(data.Id, data.Name, data.Attr);
                    }
                })
            });
        }

        function addTemplate() {
            var name = $("#templateModal input[name='name']").val();
            var attrList = [];
            $("#templateModal input[name='attr']").each(function (index) {
                attrList.push($(this).val());
            });
            $.ajax({
                url: '../Template/AddTemplate',
                type: 'POST',
                data: {                    
                    "name": name,
                    "attr": attrList
                },
                success: function (data, textStatus, xhr) {
                    if (data == true) {
                        templateTable._fnAjaxUpdate();
                        initButton();
                        $("#templateModal").modal("hide");
                        swal({
                            title: "Thêm thành công!"
                            //, text: "I will close in 2 seconds."
                            , timer: 2000
                            , type: "success"
                            , showConfirmButton: false
                        });
                    } else {
                        swal({
                            title: "Thất bại!"
                            //, text: "I will close in 2 seconds."
                            //, timer: 2000
                            , type: "warning"
                            , showConfirmButton: true
                        });
                    }
                },
                error: function () {
                    console.log("error");
                    swal({
                        title: "Thất bại!"
                        //, text: "I will close in 2 seconds."
                        //, timer: 2000
                            , type: "warning"
                            , showConfirmButton: true
                    });
                }
            });
        }

        function editTemplate(){
            var id = $("#editTemplateModal input[name='id']").val();
            var name = $("#editTemplateModal input[name='name']").val();
            var attrList = [];
            $("#editTemplateModal input[name='attr']").each(function (index) {
                attrList.push($(this).val());
            });
            $.ajax({
                url: '../Template/UpdateTemplate',
                type:'POST',
                data: {
                    "id": id,
                    "name":name,
                    "attr":  attrList
                },
                success: function (data, textStatus, xhr) {
                    if (data == true) {
                        templateTable._fnAjaxUpdate();
                        initButton();
                        $("#editTemplateModal").modal("hide");
                        swal({
                            title: "Sửa thành công!"
                            //, text: "I will close in 2 seconds."
                            , timer: 2000
                            , type: "success"
                            , showConfirmButton: false
                        });
                    } else {
                        swal({
                            title: "Thất bại!"
                            //, text: "I will close in 2 seconds."
                            //, timer: 2000
                            , type: "warning"
                            , showConfirmButton: true
                        });
                    }
                },
                error: function () {
                    console.log("error");
                    swal({
                        title: "Thất bại!"
                        //, text: "I will close in 2 seconds."
                        //, timer: 2000
                            , type: "warning"
                            , showConfirmButton: true
                    });
                }
            });
        }

        function editForm(id, name, attr) {
            $("#editTemplateModal input[name='id']").val(id);
            $("#editTemplateModal input[name='name']").val(name);
            var attrList = attr.split("_");
            console.log(attrList);
            console.log($("#editTemplateModal input[name='attr']"));
            $("#editTemplateModal input[name='attr']").each(function (index) {
                console.log(this);
                console.log(index);
                console.log(attrList);
                $(this).val(attrList[index]);
            });
            $("#editTemplateModal").modal("show");
        }

        $(document).ready(function () {
            templateTable = $('.template-table').dataTable({
                "bProcessing": true,
                "sAjaxSource": "../Template/All?shopId=1"
                , "oLanguage": languageConfig
                , "bDestroy": true
                , "aoColumnDefs": [
                    {
                        "bSortable": false
                        , "aTargets": [0]
                        , "mData": "Id"
                        , "bVisible": false
                    }
                    , {
                        "bSortable": true
                        , "aTargets": [1]
                        , "mData": "Name"
                    }
                    , {
                        "bSortable": true
                        , "aTargets": [2]
                        , "mData": function (source) {
                            var listAttr = source.Attr.split("_");
                            var content = "";
                            for (var i = 0; i < listAttr.length; i++) {
                                content += ("<span class='badge badge-success'>" + listAttr[i] + "</span>");
                            }
                            return content;
                        }
                    }
                    , {
                        "bSortable": false
                        , "bSearchable": false
                        , "aTargets": [3]
                        , "mData": null
                        , "sDefaultContent": "<button class='btn btn-primary change-template-button'>Sửa</button>"
                    }
                ]
                , "fnInitComplete": function (oSetting, json) {
                    $('.template-table').removeAttr("style");
                    initButton();
                }
                , 'sDom': 'l<"toolbar"f>rtip'
                , "fnDrawCallback": function (oSettings, json) {
                    initButton();
                }
            });


            $("div.toolbar").prepend('<div class="col-sm-4 col-lg-4 option-group"><button class="btn btn-primary add-button">Thêm</button></div>');
            $(".add-button").on("click", function () {
                document.getElementById("addForm").reset();
                $("#templateModal").modal("show");
            });
        });
    </script>
}

